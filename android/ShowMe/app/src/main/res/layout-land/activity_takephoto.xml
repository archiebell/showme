<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/takephoto_camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <ImageView
        android:id="@+id/takephoto_picture_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000"/>
    <ImageView
        android:id="@+id/takephoto_picture_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:id="@+id/takephoto_button_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:layout_alignParentEnd="true">
        <ImageButton
            android:id="@+id/takephoto_button_switchcamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_camera_front_white_48dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onClick="switchCamera"
            />
        <ImageButton
            android:id="@+id/takephoto_button_photoisbad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_clear_white_48dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onClick="photoIsBad"/>
        <ImageButton
            android:id="@+id/takephoto_button_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_camera_alt_white_48dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onClick="capturePhoto"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/takephoto_button_photoisgood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_done_white_48dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onClick="photoIsGood"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>