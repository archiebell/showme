<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <invalid.showme.layoutobjects.SquareImageView
        android:id="@+id/friendslist_compactlist_friends_row_icon"
        android:layout_width="53dp"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/friendslist_compactlist_friends_row_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/friendslist_compactlist_friends_row_icon"
        android:gravity="center_vertical"
        android:text="Example application"
        android:textSize="16sp"
        tools:ignore="RtlHardcoded" />
</RelativeLayout>